<!doctype html>
<html>

<head>
  <title>Anime fan Site</title>
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
  <link rel="stylesheet" href="style.css">
</head>

<body>
  <div class="container">

    <div class="page-header text-center">
      <h1><span><img src="img/profile.jpeg" alt=""></span> Profile Page</h1>
      <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">
    <h2>Look up your favorite Anime Character</h2>
      <div class="col-sm-6">
        <% if (user.local.email) { %>
          <form action="/messages" method="POST">
            <input type="text" value="<%= user.local.email %>" name="name">
            <input type="text" placeholder="message" name="msg">
            <button id="button" type="submit">Submit</button>
          </form>
        </div>
        <div class="row">

        </div>
      </div>
      <div class="add">
        <h3>Messages</h3>
        <ul class="messages">
          <% for(var i=0; i< messages.length; i++) {%>
            <% if (user.local.email == messages[i].name) { %>
              <li class="message">
                <h3 class="msg"><%= messages[i].name %></h3>
                <h3 class="name"><%= messages[i].msg %></h3>
                <img class="img" src="">
                <span class="likes"><%= messages[i].thumbUp %></span>
                <span><i class="fa fa-plus" aria-hidden="true"></i></span>
                <!-- <span><i class="fa fa-thumbs-down" aria-hidden="true"></i></span> -->
                <span><i class="fa fa-trash" aria-hidden="true"></i></span>
              </li>
              <% } %>
              <% } %>
            </ul>
      </div>
      <% } %>

    </div>
  <script src="https://kit.fontawesome.com/077191d827.js" crossorigin="anonymous"></script>
    <script src="main.js"></script>

</body>

</html>
